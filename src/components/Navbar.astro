---
import { Image } from "astro:assets";
import logo from "../assets/logo.jpg";

const navLinks = [
  { label: "About", href: "/#about" },
  { label: "Team", href: "/#team" },
  { label: "Careers", href: "/careers" },
  { label: "Blog", href: "/blogs" },
  { label: "Contact", href: "/#contact" },
];
---

<header
  class="lg:flex pb-2 px-4 lg:pb-0 w-screen z-[999] text-gray-800 uppercase font-semibold"
>
  <div class="flex w-full justify-between mx-auto max-w-7xl">
    <a href="/">
      <Image src={logo} alt="logo" class="mt-1 h-[76px] lg:mt-0 w-auto" />
    </a>
    <div class="block lg:hidden">
      <button
        class="relative group"
        aria-controls="primary-navigation"
        id="toggleButton"
        aria-label="Toggle Menu"
        aria-expanded={false}
      >
        <div
          class="relative flex overflow-hidden items-center justify-center rounded-full w-[50px] h-[50px] transform transition-all ring-0 ring-gray-300 hover:ring-8 group-aria-expanded:ring-4 ring-opacity-30 duration-200"
        >
          <div
            class="flex flex-col justify-between w-[24px] h-[24px] transform transition-all duration-300 origin-center overflow-hidden"
          >
            <div
              class="bg-black h-[4px] rounded-full w-6 transform transition-all duration-300 origin-left group-aria-expanded:translate-y-6 delay-100"
            >
            </div>
            <div
              class="bg-black h-[4px] rounded-full w-6 transform transition-all duration-300 group-aria-expanded:translate-y-6 delay-75"
            >
            </div>
            <div
              class="bg-black h-[4px] rounded-full w-6 transform transition-all duration-300 origin-left group-aria-expanded:translate-y-6"
            >
            </div>

            <div
              class="absolute items-center justify-between transform transition-all duration-500 top-2.5 -translate-x-10 group-aria-expanded:translate-x-0 flex w-0 group-aria-expanded:w-12"
            >
              <div
                class="absolute bg-black h-[4px] rounded-full w-6 transform transition-all duration-500 rotate-0 delay-300 group-aria-expanded:rotate-45"
              >
              </div>
              <div
                class="absolute bg-black h-[4px] rounded-full w-6 transform transition-all duration-500 -rotate-0 delay-300 group-aria-expanded:-rotate-45"
              >
              </div>
            </div>
          </div>
        </div>
      </button>
    </div>
    <nav
      id="primaryNavigation"
      aria-expanded={false}
      class="bg-white max-h-0 lg:bg-transparent absolute lg:max-h-96 my-auto lg:h-12 lg:static top-16 left-0 lg:flex overflow-hidden transition-max-height ease-in-out duration-500"
    >
      <ul
        class="flex flex-col lg:flex-row items-center lg:gap-10 w-screen lg:w-full text-center lg:pr-4"
      >
        {
          navLinks.map((link) => (
            <li class="text-gray-900 relative my-3 sm:my-1 pb-4 sm:pb-2 lg:pb-0 text-base md:w-full w-screen text-center after:mt-1 block after:block after:content-[''] after:absolute after:h-[4px] after:bg-lime-700 after:rounded-full after:w-full after:scale-x-0 lg:after:hover:scale-x-100 after:transition after:duration-300 after:origin-left md:border-none border-b border-gray-400">
              <a class="text-gray-900" href={link.href}>
                {link.label}
              </a>
            </li>
          ))
        }
        <li></li>
        <button
          class="bg-fuel-600 hover:bg-fuel-700 text-white font-semibold py-2 px-4 rounded"
        >
          Contact
        </button>
      </ul>
    </nav>
  </div>
</header>

<script>
  document.addEventListener("astro:page-load", function () {
    const button = document.getElementById("toggleButton") as HTMLButtonElement;
    var nav = document.getElementById("primaryNavigation") as HTMLElement;

    if (!button || !nav) return;

    button.addEventListener("click", function () {
      var expanded = nav.getAttribute("aria-expanded") === "true";
      nav.setAttribute("aria-expanded", String(!expanded));
      if (!expanded) {
        nav.classList.add("max-h-[400px]");
        nav.classList.remove("max-h-0");
        button.setAttribute("aria-expanded", String(!expanded));
      } else {
        nav.classList.add("max-h-0");
        nav.classList.remove("max-h-[400px]");
        button.setAttribute("aria-expanded", String(!expanded));
      }
    });
    // Close Navigation on List Item Click
    const navLinks = document.querySelectorAll("#primaryNavigation li");
    navLinks.forEach(function (link) {
      link.addEventListener("click", function () {
        nav.classList.remove("max-h-[400px]");
        nav.classList.add("max-h-0");
        nav.setAttribute("aria-expanded", "false");
        button.setAttribute("aria-expanded", "false");
      });
    });
  });
</script>
