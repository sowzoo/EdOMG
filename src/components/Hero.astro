---
import { Picture } from "astro:assets";
import bg from "../assets/bg.webp";
---

<section class="md:h-[80vh] bg-coffee/20">
  <div class="max-w-7xl mx-auto text-gray-900 py-12 md:py-7">
    <div class="flex flex-col-reverse md:flex-row items-center">
      <div class="md:w-2/5 px-4">
        <h1 class="text-5xl font-medium mt-6 mb-6 md:mt-0">
          You know people want what you have
        </h1>
        <p class="text-xl mb-12 max-w-sm">
          We connect you with those people. It's how we make your business
          busier. Success in today's digital world requires more than just a
          great work ethic.
        </p>
        <a
          href="#"
          class="bg-pumpkin text-white font-semibold py-4 px-12 rounded hover:opacity-90"
          >Book A Call</a
        >
      </div>
      <div class="md:w-3/5">
        <Picture
          class="w-full h-full max-w-lg mx-auto p-4 rounded-sm overflow-hidden"
          src={bg}
          alt="Hero Image"
          formats={["avif", "webp"]}
          sizes="(max-width: 640px, 100vw) 50vw"
          fallbackFormat="jpeg"
          widths={[400, 800, 1200]}
        />
      </div>
    </div>
  </div>
</section>
