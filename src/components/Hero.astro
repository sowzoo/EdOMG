---
import { getImage } from "astro:assets";
import bg from "../assets/bg.jpg";
const optimizedBackground = await getImage({
  src: bg,
  format: "webp",
});
---

<div class="h-[70vh] bg-gray-50 flex items-center">
  <section
    class="bg-cover bg-[100%_25%] w-full h-full"
    style={`background-image: url(${optimizedBackground.src});`}
  >
    <div class="max-w-7xl mx-auto text-left text-gray-900 mt-32">
      <div class="flex items-center">
        <div class="md:w-1/2 px-4">
          <h1 class="text-5xl font-medium mb-6">Welcome to My Agency</h1>
          <p class="text-xl mb-12">
            Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nam viverra
            euismod odio, gravida pellentesque urna varius vitae.
          </p>
          <a
            href="#"
            class="bg-fuel-600 text-white font-semibold py-4 px-12 rounded hover:bg-fuel-700"
            >Demo</a
          >
        </div>
      </div>
    </div>
  </section>
</div>
